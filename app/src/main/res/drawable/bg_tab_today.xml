<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/organic_pale" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:gravity="top|center_horizontal">
                <shape android:shape="rectangle">
                    <solid android:color="@color/organic_pale" />
                    <size android:width="30dp" android:height="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:gravity="top|center_horizontal">
                <shape android:shape="rectangle">
                    <solid android:color="@color/organic_pale" />
                    <size android:width="45dp" android:height="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
